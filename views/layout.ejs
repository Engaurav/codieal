                    <% if(flash.success && flash.success.length >0 ){ %>
                        new Noty({
                            theme:'relax',
                            type: 'success',
                            layout: 'bottomRight',
                            text:  "<%= flash.success %>",
                            timeout : 1500
                        }).show();
                    <%}%>
